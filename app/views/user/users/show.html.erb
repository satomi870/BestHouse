<h2>マイページ</h2>

  <div class="row">
    <div class="col-1">
      <%= image_tag @user.get_image(100,100)%>
    </div>
    <div class="col-1 mt-2">
      <%=@user.nickname%>
      <%=@user.age%>
      <%=@user.gender%>
    </div>
    <div class="col-3 edit">
      <%= link_to "編集する",edit_user_path,class: "btn"%>
    </div>
  </div>





 <div class="wrap">
   <ul id="tab-menu">
      <li><a href="#tab1" class="active ">投稿した口コミ</a></li>
      <li><a href="#tab2" class="">投稿した質問</a></li>
      <li><a href="#tab3" class="">投稿したコメント</a></li>
      <li><a href="#tab4" class="">投稿したリプライ</a></li>
      <li><a href="#tab5" class="">シェアしたハウスルール</a></li>
   </ul>
 </div>

 <div id="tab-contents">
   <div id="tab1" class="tab">
    <% @reviews.each do |review| %>
    <h5><%= review.property.property_name %></h5>
    <div class="mb-3">
      <%= render '/user/properties/review', review: review %>
    </div>
    <% end %>
  </div>

  <div id="tab2" class="tab">
    <h2><%= @userさんがした質問一覧　%></h2>
    <% @questions.each do |question| %>
    <h5><%= question.property.property_name %></h5>
    <%= render 'user/properties/question', question: question, comment: @comment,comment_comment: @comment_comment %>
    <%end%>
  </div>

  <div id="tab3" class="tab">
    <h2><%= @userさんがしたコメント一覧　%></h2>
    <% @comment_questions.each do |comment_question| %>
      <h5><%= comment_question.property.property_name %></h5>
      <%= render 'user/properties/question', question: comment_question, comment: @comment, comment_comment: @comment_comment %>
    <% end %>
  </div>

  <div id="tab4" class="tab">
    <h2><%= @userさんがしたリプライ一覧　%></h2>
    <% @comment_comment_questions.each do |comment_comment_question| %>
      <h5><%= comment_comment_question.property.property_name %></h5>
      <%= render 'user/properties/question', question: comment_comment_question, comment: @comment, comment_comment: @comment_comment %>
    <% end %>
  </div>

  　<div id="tab5" class="tab">

　　 <%@rules.each do |rule|%>
　　 <%=rule.property.property_name %>
　　   <ul>
　　     <li><%= rule.body %></li>
　　   </ul>
      <%end%>
　　</div>
</div>
</div>

