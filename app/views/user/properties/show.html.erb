

<div class="slicker w-8s5 d-flex mx-auto align-items-center">
  <% @property.images.first(2).each do |image| %>

      <%=image_tag image, class:'slide_picture'%>

  <%end%>
</div>
<div class="text-center mb-5">
  <h3><%= @property.property_name %></h3>
  <p><%= @property.introduction %></p>

<% @property.tags.each do |tag| %>
 <div class="col-3 text-center">
  <div class="tags">
  <%=tag.name%>
  </div>
  </div>
<%end%>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 mt-5">
      <h3 class="under">共有設備</h3>
    </div>
   <div class="col-6">
    <h3>リビング</h3>
    <p><%= image_tag @property.images[0],size: '400x230' %></p>
    <p><%= @property.living%></p>
  </div>
  <div class="col-6">
    <h3>キッチン</h3>
    <p><%= image_tag @property.images[2],size: '400x230'  %></p>
    <p><%= @property.kitchen%></p>
  </div>
  </div>
  <div class ="row mt-5">
  <div class="col-4">
    <h3>浴室</h3>
    <p><%= image_tag @property.images[3],size: '250x230' %></p>
    <p><%= @property.bath%></p>
  </div>
  <div class="col-4">
  <h3>洗濯機</h3>
    <p><%= image_tag @property.images[4],size: '250x230' %></p>
    <p><%= @property.washing_machine %></p>
  </div>
  <div class="col-4">
  <h3>トイレ</h3>
    <p><%= image_tag @property.images[5],size: '250x230' %></p>
    <p><%= @property.toilet %></p>
    </div>
  </div>
</div>

<h3 class="under">部屋</h3>
<p>空室<%= @property.vacancy %></p>
<p>入居条件<%= @property.condition %></p>

<table>
  <thead>
    <th>広さ</th>
    <th>賃料</th>
    <th>共益費</th>
  </thead>
  <yody>
    <td><%= @property.breadth %></td>
    <td><%= @property.rent %></td>
    <td><%= @property.common_service_fee %></td>
  </yody>
</table>
<%= image_tag @property.images[6],size: '350x230'%>
<p><%= @property.room_facility %></p>

<h3>アクセス</h3>
<p><%= @property.address %></p>
<p><%= @property.access %></p>
<p><%=link_to "地図を見る",map_path(@property.id)%></p>

<div class="text-center">
  <div class="fixed-bottom">
    <%= link_to "お問い合わせ",new_property_contact_path(@property.id) %>
  </div>
</div>


<%= render "/user/properties/tab" %>

<!----サイトからダウンロードしたできているjavascriptを読み込む-->

<script>
  var $jq = jQuery.noConflict();
  $jq(document).on('DOMContentLoaded', function(){
  $jq('.slicker').slick({
    autoplay:true,
    autoplaySpeed: 3000,
    dots:true,
    prevArrow:'<i class="fas fa-arrow-alt-circle-left mr-2"></i>',
    nextArrow:'<i class="fas fa-arrow-alt-circle-right ml-2"></i>'
  });

});
</script>





