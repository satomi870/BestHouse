

<div class="slicker w-8s5 d-flex mx-auto align-items-center">
  <% @property.images.first(2).each do |image| %>

      <%=image_tag image, class:'slide_picture'%>

  <%end%>
</div>
<div class="text-center mb-5">
  <h3><%= @property.property_name %></h3>
  <p><%= @property.introduction %></p>

<% @property.tags.each do |tag| %>
 <div class="col-3 text-center">
  <div class="tags">
  <%=tag.name%>
  </div>
  </div>
<%end%>
</div>

<div class="container">
  <div class="row">
    <div class="col-12 mt-5">
      <h3 class="under">共有設備</h3>
    </div>
   <div class="col-6">
    <h3>リビング</h3>
    <p><%= image_tag @property.images[0],size: '400x230' %></p>
    <p><%= @property.living%></p>
  </div>
  <div class="col-6">
    <h3>キッチン</h3>
    <p><%= image_tag @property.images[2],size: '400x230'  %></p>
    <p><%= @property.kitchen%></p>
  </div>
  </div>
  <div class ="row mt-5">
  <div class="col-4">
    <h3>浴室</h3>
    <p><%= image_tag @property.images[3],size: '250x230' %></p>
    <p><%= @property.bath%></p>
  </div>
  <div class="col-4">
  <h3>洗濯機</h3>
    <p><%= image_tag @property.images[4],size: '250x230' %></p>
    <p><%= @property.washing_machine %></p>
  </div>
  <div class="col-4">
  <h3>トイレ</h3>
    <p><%= image_tag @property.images[5],size: '250x230' %></p>
    <p><%= @property.toilet %></p>
    </div>
  </div>
</div>

<h3 class="under mt-5 mb-4">部屋</h3>
<p>空室<%= @property.vacancy %></p>
<p>入居条件<%= @property.condition %></p>

<div class="row">

    <div class="col-6 mt-4">
  <%= image_tag @property.images[6],size: '350x230'%>
</div>
<div class="col-6 mt-4">
<table class="content" width="400" height="200"border="1">
  <tr><th bgcolor="#1E90FF">家賃</th><td><%= @property.rent %></td></tr>
  <tr><th bgcolor="#1E90FF">共益費</th><td><%= @property.common_service_fee %></td></tr>
  <tr><th bgcolor="#1E90FF">広さ</th><td><%= @property.breadth %></td></tr>
  <tr><th bgcolor="#1E90FF">設備</th><td><%= @property.room_facility %></td></tr>
</table>
</div>

</div>

<h3 class="under mt-5">アクセス</h3>
<p class="mt-5"><%= @property.address %></p>
<p><%= @property.access %></p>
<p class="mt-3"><%=link_to "地図を見る",map_path(@property.id),class: "btn"%></p>

<div class="text-center">
  <div class="fixed-bottom">
    <%= link_to "お問い合わせ",new_property_contact_path(@property.id) %>
  </div>
</div>


