<h4 class="ml-3">ハウスルール一覧</h4>
<% @rules.each do |rule| %>
  <div class="container mt-5">
    <div class="row mb-2">
      <div class="col-6">
        <h6><%= rule.property.property_name %></h6>
        <div class="writing">
          <%=rule.body %>
        </div>
      </div>
      <div class="col-6">
        <span class="mr-2"><%= link_to "削除", admin_rule_path(rule.id), method: :delete %></span>
        <%= link_to admin_user_path(rule.user.id) do %>
          <%= rule.user.nickname %>
        <%end%>
      </div>
    </div>
  </div>
<%end%>














